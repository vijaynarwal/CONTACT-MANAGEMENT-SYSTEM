<body>

    <div class="app-window">
        <!-- SIDEBAR NAVIGATION -->
        <div class="sidebar">
            <div class="brand">
                <span>üìì</span> ContactBook
            </div>
            <button class="nav-btn active" onclick="switchTab('dialer')">
                <span>üì±</span> Keypad
            </button>
            <button class="nav-btn" onclick="switchTab('contacts')">
                <span>üë•</span> All Contacts
            </button>
        </div>

        <!-- MAIN CONTENT AREA -->
        <div class="main-content">
            
            <!-- VIEW 1: DIALER / KEYPAD -->
            <div id="dialerView" class="view-section active-view">
                <div class="dialer-container">
                    
                    <!-- Action Link (Hidden unless typing) -->
                    <div class="dialer-display">
                        <div id="createAction" class="dialer-actions" onclick="openModalWithNumber()">
                            <span>+</span> Create new contact
                        </div>
                        <div class="dialer-number" id="dialDisplay"></div>
                    </div>

                    <!-- Keypad Grid -->
                    <div class="keypad-grid">
                        <button class="key-btn" onclick="pressKey('1')">1<div class="key-sub">&nbsp;</div></button>
                        <button class="key-btn" onclick="pressKey('2')">2<div class="key-sub">ABC</div></button>
                        <button class="key-btn" onclick="pressKey('3')">3<div class="key-sub">DEF</div></button>
                        <button class="key-btn" onclick="pressKey('4')">4<div class="key-sub">GHI</div></button>
                        <button class="key-btn" onclick="pressKey('5')">5<div class="key-sub">JKL</div></button>
                        <button class="key-btn" onclick="pressKey('6')">6<div class="key-sub">MNO</div></button>
                        <button class="key-btn" onclick="pressKey('7')">7<div class="key-sub">PQRS</div></button>
                        <button class="key-btn" onclick="pressKey('8')">8<div class="key-sub">TUV</div></button>
                        <button class="key-btn" onclick="pressKey('9')">9<div class="key-sub">WXYZ</div></button>
                        <button class="key-btn" onclick="pressKey('*')">*</button>
                        <button class="key-btn" onclick="pressKey('0')">0<div class="key-sub">+</div></button>
                        <button class="key-btn" onclick="pressKey('#')">#</button>
                    </div>

                    <div class="dialer-bottom">
                        <!-- Dummy spacing div to center the call button -->
                        <div style="width: 40px;"></div>
                        <button class="call-btn" onclick="makeCall()">üìû</button>
                        <button class="backspace-btn" onclick="backspace()">‚å´</button>
                    </div>
                </div>
            </div>

            <!-- VIEW 2: CONTACT LIST -->
            <div id="contactsView" class="view-section">
                <div class="contacts-header">
                    <div class="header-title">
                        <h2>My Contacts</h2>
                    </div>
                    <button class="add-btn" onclick="openModal()">
                        <span>+</span> Add New
                    </button>
                </div>
                
                <div id="contactGrid" class="contact-grid">
                    <!-- Contacts Injected Here -->
                </div>
                <div id="emptyState" style="text-align: center; color: #aaa; margin-top: 50px; display: none;">
                    No contacts saved yet.
                </div>
            </div>

        </div>
    </div>

    <!-- MODAL POPUP (ADD/EDIT) -->
    <div id="contactModal" class="modal">
        <div class="modal-content">
            <h3 class="modal-header" id="modalTitle">Create New Contact</h3>
            <div class="form-group">
                <label>Full Name</label>
                <input type="text" id="inputName" placeholder="e.g. Sameer Khan">
            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <input type="tel" id="inputPhone" placeholder="e.g. 0123456789">
            </div>
            <div class="modal-footer">
                <button class="btn-cancel" onclick="closeModal()">Cancel</button>
                <button class="btn-save" onclick="saveContact()">Save Contact</button>
            </div>
        </div>
    </div>

    <!-- CONFIRM DELETE MODAL -->
    <div id="confirmModal" class="modal">
        <div class="modal-content" style="width: 320px; text-align: center;">
            <h3 class="modal-header">Delete Contact?</h3>
            <p style="margin-bottom: 20px; color: #64748b;">This action cannot be undone.</p>
            <div class="modal-footer" style="justify-content: center;">
                <button class="btn-cancel" onclick="closeConfirmModal()">No</button>
                <button class="btn-save" id="confirmDeleteBtn" style="background-color: var(--danger);">Yes, Delete</button>
            </div>
        </div>
    </div>

    <!-- TOAST NOTIFICATION -->
    <div id="toast" class="toast"></div>

    <script>
        // --- State ---
        let contacts = JSON.parse(localStorage.getItem('contacts')) || [];
        let currentNumber = "";
        let editId = null;
        let deleteId = null;

        // --- Init ---
        renderContacts();

        // --- Navigation Logic ---
        function switchTab(tabName) {
            // Update buttons
            document.querySelectorAll('.nav-btn').forEach(btn => btn.classList.remove('active'));
            event.currentTarget.classList.add('active');

            // Update Views
            document.querySelectorAll('.view-section').forEach(view => view.classList.remove('active-view'));
            
            if(tabName === 'dialer') {
                document.getElementById('dialerView').classList.add('active-view');
            } else {
                document.getElementById('contactsView').classList.add('active-view');
                renderContacts(); // Refresh list on open
            }
        }

        
        function pressKey(key) {
            if (currentNumber.length < 15) {
                currentNumber += key;
                updateDialerUI();
            }
        }

        function backspace() {
            currentNumber = currentNumber.slice(0, -1);
            updateDialerUI();
        }

        function makeCall() {
            if (currentNumber.length === 0) {
                showToast("‚ö†Ô∏è Enter a number first", 'error');
            } else if (currentNumber.length < 10) {
                showToast("‚ö†Ô∏è Invalid Number: Too short", 'error');
            } else {
                // Show notification instead of alert
                showToast(`Connecting to ${currentNumber}...`, 'default');
                setTimeout(() => {
                    showToast("‚ö†Ô∏è Network unavailable", 'error');
                }, 1500);
            }
        }

        function updateDialerUI() {
            const display = document.getElementById('dialDisplay');
            const action = document.getElementById('createAction');
            
            display.textContent = currentNumber;
            
            // Show "Create Contact" link if number exists
            if(currentNumber.length > 0) {
                action.style.opacity = '1';
                action.style.pointerEvents = 'auto';
            } else {
                action.style.opacity = '0';
                action.style.pointerEvents = 'none';
            }
        }

        function openModalWithNumber() {
            openModal();
            document.getElementById('inputPhone').value = currentNumber;
        }

        // --- Modal & CRUD Logic ---
        function openModal(contactId = null) {
            const modal = document.getElementById('contactModal');
            const title = document.getElementById('modalTitle');
            const nameIn = document.getElementById('inputName');
            const phoneIn = document.getElementById('inputPhone');

            modal.classList.add('open');
            
            if (contactId) {
                // Edit Mode
                const contact = contacts.find(c => c.id === contactId);
                editId = contactId;
                title.textContent = "Edit Contact";
                nameIn.value = contact.name;
                phoneIn.value = contact.phone;
            } else {
                // Add Mode
                editId = null;
                title.textContent = "Create New Contact";
                nameIn.value = "";
                // If not coming from dialer with pre-fill, clear it
                if (!currentNumber || document.activeElement.classList.contains('add-btn')) {
                     phoneIn.value = ""; 
                }
            }
            nameIn.focus();
        }

        function closeModal() {
            document.getElementById('contactModal').classList.remove('open');
            // Clear dialer if we saved from dialer
            if(document.getElementById('dialerView').classList.contains('active-view') && editId === null) {
                currentNumber = "";
                updateDialerUI();
            }
        }

        function saveContact() {
            const name = document.getElementById('inputName').value.trim();
            const phone = document.getElementById('inputPhone').value.trim();

            if (!name || !phone) {
                showToast("Please fill in both fields", "error");
                return;
            }

            if (editId) {
                // Update
                contacts = contacts.map(c => c.id === editId ? {...c, name, phone} : c);
                showToast("Contact Updated!", "success");
            } else {
                // Create
                const newContact = {
                    id: Date.now(),
                    name,
                    phone
                };
                contacts.push(newContact);
                showToast("Contact Saved!", "success");
            }

            localStorage.setItem('contacts', JSON.stringify(contacts));
            closeModal();
            renderContacts();
        }

        
        function confirmDelete(id) {
            deleteId = id;
            document.getElementById('confirmModal').classList.add('open');
            
            // Set up the yes button
            document.getElementById('confirmDeleteBtn').onclick = function() {
                executeDelete();
            };
        }

        function closeConfirmModal() {
            document.getElementById('confirmModal').classList.remove('open');
            deleteId = null;
        }

        function executeDelete() {
            if (deleteId) {
                contacts = contacts.filter(c => c.id !== deleteId);
                localStorage.setItem('contacts', JSON.stringify(contacts));
                renderContacts();
                showToast("Contact deleted", "default");
            }
            closeConfirmModal();
        }

        function renderContacts() {
            const grid = document.getElementById('contactGrid');
            const empty = document.getElementById('emptyState');
            
            grid.innerHTML = '';

            if (contacts.length === 0) {
                empty.style.display = 'block';
            } else {
                empty.style.display = 'none';
            }

            contacts.forEach(contact => {
                const card = document.createElement('div');
                card.className = 'contact-card';
                card.innerHTML = `
                    <div class="card-info">
                        <h3>${contact.name}</h3>
                        <p>${contact.phone}</p>
                    </div>
                    <div class="card-actions">
                        <button onclick="openModal(${contact.id})">‚úèÔ∏è</button>
                        <button class="delete-btn" onclick="confirmDelete(${contact.id})">üóëÔ∏è</button>
                    </div>
                `;
                grid.appendChild(card);
            });
        }

        
        function showToast(message, type = 'default') {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.className = 'toast show'; // Reset classes
            if (type === 'error') toast.classList.add('error');
            if (type === 'success') toast.classList.add('success');
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }
    </script>
</body>
</html>
